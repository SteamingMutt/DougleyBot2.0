  "version": "0.2.0",
  "configurations": [
    {
      "name": "apps/discord: Launch via NPM - Hot Reload",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "env": {
        "NODE_ENV": "development",
        //"TRACE": "1"
      },
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/apps/discord",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "apps/discord: Launch - Plain",
      "program": "${workspaceFolder}/apps/discord/src/index.mts",
      "preLaunchTask": "npm: build",
      "env": {
        "NODE_ENV": "development",
        //"TRACE": "1"
      },
      "outFiles": [
        "${workspaceFolder}/apps/discord/dist/**/*.mjs"
      ],
      "outputCapture": "std"
    }
  ]
}