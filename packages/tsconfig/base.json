{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist"]
}
